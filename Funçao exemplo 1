int soma(int n1, int n2){  // int x, int y
    n1++;  n2++;// adicionar a variavel 
     int z = n1+ n2;
        printf("\n Dentro da funçao soma: N1 = %d, N2 = %d", n1, n2);    
    return z;
}
 
 