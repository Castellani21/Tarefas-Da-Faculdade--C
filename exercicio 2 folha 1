 #include <stdio.h>
int main(){
    int i, j, n;
    
    printf("DIGITE O TAAMHO DA MATRIZ");
        scanf("%d", &n);
            
            int matriz[n][n];
            
             for(i=0; i<n; i++){
                for(j=0; j<n; j++){
                    matriz[i][j]=0;
                    if(j<=1)
                        matriz[i][j]=j+1;
                        //else 
                        else 
                         matriz[i][j] = 0;
                        
                }
                        
            }
    
            for(i=0; i<n; i++){
                for(j=0; j<n; j++){
                      matriz[i][j]=j+1;
                }
                        
            }
            
            for(i=0; i<n; i++){
                for(j=0; j<n; j++){
                    printf("%d \n", matriz[i][j]);
                }
                        
            }
            printf("\n");
            
    return 0;
}

 